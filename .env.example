# Copy to .env and edit
APP_HOST=0.0.0.0
APP_PORT=8000
REDIS_URL=redis://localhost:6379/0
MODEL_PATH=./models/hybrid_model.joblib
RETRAIN_TOKEN=replace-this-secret-token
RETRAIN_CRON=@daily
# For local scheduler (hours between retrains)
RETRAIN_INTERVAL_HOURS=24
# Redis lock TTL (seconds) used to prevent concurrent retrains
REDIS_RETRAIN_LOCK_TTL=1800
REDLOCK_ENABLED=false
# When using Redlock with multiple Redis nodes, provide a comma-separated list of redis URLs
# Example: redis://host1:6379/0,redis://host2:6379/0,redis://host3:6379/0
REDLOCK_NODES=